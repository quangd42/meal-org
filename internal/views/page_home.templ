package views

import "github.com/google/uuid"

type HomeVM struct {
	CommonVM
}

func NewHomeVM(userID uuid.UUID, navItems []NavItem) HomeVM {
	return HomeVM{
		CommonVM{Title: "Homepage", UserID: userID, NavItems: navItems},
	}
}

templ Home(vm HomeVM) {
	@Layout(vm.Title, vm.NavItems) {
		<h1>
			Hello World!
		</h1>
	}
}
