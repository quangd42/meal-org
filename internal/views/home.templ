package views

import (
	"github.com/google/uuid"
	"github.com/quangd42/meal-planner/internal/components"
)

type HomeVM struct {
	CommonVM
}

func NewHomeVM(userID uuid.UUID, navItems []components.NavItem) HomeVM {
	return HomeVM{
		CommonVM{Title: "Homepage", UserID: userID, NavItems: navItems},
	}
}

templ Home(vm HomeVM) {
	@components.Layout(vm.Title, vm.UserID, vm.NavItems) {
		@components.Hello()
	}
}
